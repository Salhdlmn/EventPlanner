@model IEnumerable<AIEventPlanner.Entities.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Kategoriler</h1>
            </div>

        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-tags"></i> Kategori Yönetimi
                        </h3>
                        <div class="card-tools">
                            <a href="@Url.Action("Create")" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus"></i> Yeni Kategori Ekle
                            </a>
                        </div>
                    </div>

                    <div class="card-body">
                        @if (Model != null && Model.Any())
                        {
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                                        <div class="card h-100 category-card" style="border-left: 4px solid @item.Color;">
                                            <div class="card-header" style="background-color: rgba(@(item.Color.Replace("#", "")), 0.1);">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <h5 class="card-title mb-0">
                                                        <i class="fas fa-tag" style="color: @item.Color;"></i>
                                                        @item.Name
                                                    </h5>
                                                    <span class="badge badge-secondary">#@item.Id</span>
                                                </div>
                                            </div>

                                            <div class="card-body">
                                                <div class="mb-3">
                                                    <strong>Açıklama:</strong>
                                                    <p class="text-muted mb-0">
                                                        @if (!string.IsNullOrEmpty(item.Description))
                                                        {
                                                            @item.Description
                                                        }
                                                        else
                                                        {
                                                            <em>Açıklama bulunmuyor</em>
                                                        }
                                                    </p>
                                                </div>

                                                <div class="mb-3">
                                                    <strong>Renk:</strong>
                                                    <div class="d-flex align-items-center mt-1">
                                                        <div class="color-preview" style="width: 30px; height: 30px; background-color: @item.Color; border-radius: 4px; border: 2px solid #ddd; margin-right: 10px;"></div>
                                                        <span class="text-muted">@item.Color</span>
                                                    </div>
                                                </div>

                                                <div class="mt-3">
                                                    <strong>Etkinlik Sayısı:</strong>
                                                    <span class="badge badge-info">@(item.Events?.Count ?? 0) etkinlik</span>
                                                </div>
                                            </div>

                                            <div class="card-footer bg-transparent">
                                                <div class="btn-group w-100" role="group">
                                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm" title="Düzenle">
                                                        <i class="fas fa-edit"></i> Düzenle
                                                    </a>

                                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm" title="Sil">
                                                        <i class="fas fa-trash"></i> Sil
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                            <div class="row mt-4">
                                <div class="col-12">
                                    <div class="card card-outline card-info">
                                        <div class="card-header">
                                            <h3 class="card-title">
                                                <i class="fas fa-chart-pie"></i> Kategori İstatistikleri
                                            </h3>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <div class="info-box">
                                                        <span class="info-box-icon bg-primary">
                                                            <i class="fas fa-tags"></i>
                                                        </span>
                                                        <div class="info-box-content">
                                                            <span class="info-box-text">Toplam Kategori</span>
                                                            <span class="info-box-number">@Model.Count()</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="info-box">
                                                        <span class="info-box-icon bg-success">
                                                            <i class="fas fa-calendar-check"></i>
                                                        </span>
                                                        <div class="info-box-content">
                                                            <span class="info-box-text">Toplam Etkinlik</span>
                                                            <span class="info-box-number">@Model.Sum(c => c.Events?.Count ?? 0)</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="info-box">
                                                        <span class="info-box-icon bg-warning">
                                                            <i class="fas fa-calendar-day"></i>
                                                        </span>
                                                        <div class="info-box-content">
                                                            <span class="info-box-text">Bu Ay</span>
                                                            <span class="info-box-number">@Model.Sum(c => c.Events?.Count(e => e.StartDate.HasValue && e.StartDate.Value.Month == DateTime.Now.Month) ?? 0)</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="info-box">
                                                        <span class="info-box-icon bg-info">
                                                            <i class="fas fa-calendar-week"></i>
                                                        </span>
                                                        <div class="info-box-content">
                                                            <span class="info-box-text">Bu Hafta</span>
                                                            <span class="info-box-number">
                                                                @(Model.Sum(c =>
        (c.Events != null
            ? c.Events.Count(e => e.StartDate.HasValue && e.StartDate.Value >= DateTime.Now.AddDays(-7))
            : 0)
    )
)
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <div class="empty-state">
                                    <i class="fas fa-tags fa-4x text-muted mb-3"></i>
                                    <h4 class="text-muted">Henüz kategori eklenmemiş</h4>
                                    <p class="text-muted">İlk kategoriyi ekleyerek başlayın</p>
                                    <a href="@Url.Action("Create")" class="btn btn-primary">
                                        <i class="fas fa-plus"></i> İlk Kategoriyi Ekle
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/Content/category-styles.css">
}

